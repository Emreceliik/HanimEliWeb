<%- include('../partials/header.ejs') %>
<head>
  <style>
    /* Genel Sayfa Stili */
    body {
      font-family: Arial, sans-serif;
      background-color: #f9f9f9;
      color: #333;
      margin: 0;
      padding: 0;
    }

    h1 {
      text-align: center;
      margin: 30px 0;
      font-size: 2em;
      color: #4CAF50;
    }

    /* Form Alanı */
    form {
      display: flex;
      flex-direction: column;
      align-items: center;
      max-width: 600px;
      margin: 0 auto;
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Girdi Alanları */
    input[type="text"], textarea, select, input[type="number"], input[type="file"] {
      width: 100%;
      padding: 12px;
      margin: 10px 0;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 16px;
    }

    /* Fiyat ve Dosya Seçme Alanları */
    input[type="number"], input[type="file"] {
      max-width: 100%;
    }

    /* Yayınla Butonu */
    button[type="submit"] {
      background-color: #4CAF50;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      cursor: pointer;
      margin-top: 15px;
      transition: background-color 0.3s;
    }

    button[type="submit"]:hover {
      background-color: #45a049;
    }

    /* Formu içeren konteyner */
    .container {
      padding: 20px;
      max-width: 800px;
      margin: 0 auto;
    }

    /* Textarea özelleştirme */
    textarea {
      height: 150px;
      resize: vertical;
    }
  </style>
</head>

<h1>İlan Düzenle</h1>
<form method="POST" action="/listings/<%= listing.id %>/edit" enctype="multipart/form-data">
  <input type="text" name="title" value="<%= listing.title %>" placeholder="İlan Başlığı" required />
  <textarea name="description" placeholder="Açıklama" required><%= listing.description %></textarea>
  <select name="category" required>
    <option value="ev_yemegi" <%= listing.category === 'ev_yemegi' ? 'selected' : '' %>>Ev Yemeği</option>
    <option value="orgu" <%= listing.category === 'orgu' ? 'selected' : '' %>>Örgü</option>
    <option value="boncuk" <%= listing.category === 'boncuk' ? 'selected' : '' %>>Boncuk</option>
    <option value="canta" <%= listing.category === 'canta' ? 'selected' : '' %>>Çanta</option>
    <option value="diger" <%= listing.category === 'diger' ? 'selected' : '' %>>Diğer</option>
  </select>
  <input type="number" name="price" value="<%= listing.price %>" placeholder="Fiyat" required />
  <input type="file" name="image" />
  <button type="submit">İlanı Güncelle</button>
</form>

<%- include('../partials/footer.ejs') %>
