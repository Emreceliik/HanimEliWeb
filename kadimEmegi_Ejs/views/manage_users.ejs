<%- include('../partials/header.ejs', { title: 'Kullanıcı Yönetimi' }) %>

<div class="container mt-5">
    <h1>Kullanıcı Yönetimi</h1>
    <% if (users.length > 0) { %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Rol</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.username %></td>
                        <td><%= user.first_name %></td>
                        <td><%= user.last_name %></td>
                        <td><%= user.role %></td>
                        <td>
                            <form action="/admin/delete-user/<%= user.id %>" method="POST" class="d-inline">
                                <button class="btn btn-danger">Sil</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>Henüz kullanıcı bulunmamaktadır.</p>
    <% } %>
</div>

<%- include('../partials/footer.ejs') %>
