<%- include('partials/header') %>
<h1>Ödeme ve Sipariş</h1>
<form method="POST" action="/orders/checkout">
  <input type="text" name="shipping_address" placeholder="Adresiniz" required />
  <select name="payment_method" required>
    <option value="credit_card">Kredi Kartı</option>
    <option value="paypal">PayPal</option>
    <option value="cash_on_delivery">Kapıda Ödeme</option>
  </select>
  <button type="submit">Siparişi Tamamla</button>
</form>
